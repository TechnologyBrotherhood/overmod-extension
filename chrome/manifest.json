{
  "manifest_version": 3,
  "name": "Overmod for Hacker News",
  "description": "Hide threads from blocked users and highlight valuable users on Hacker News.",
  "version": "0.6.1",
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/overmod-16.png",
    "32": "icons/overmod-32.png",
    "48": "icons/overmod-48.png",
    "128": "icons/overmod-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://news.ycombinator.com/*"
      ],
      "js": ["common.js", "content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://overmod.org/*",
        "https://*.overmod.org/*"
      ],
      "js": ["site_bridge.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Overmod",
    "default_icon": {
      "16": "icons/overmod-16.png",
      "32": "icons/overmod-32.png",
      "48": "icons/overmod-48.png",
      "128": "icons/overmod-128.png"
    }
  }
}
